generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id          Int       @id @default(autoincrement())
  player1     String
  player2     String
  winner      String?
  board       Json?
  duration    Int?
  createdAt   DateTime  @default(now())
  completedAt DateTime?
}

model Leaderboard {
  username String @id
  wins     Int    @default(0)
  losses   Int    @default(0)
  draws    Int    @default(0)
}

model Analytics {
  id        Int      @id @default(autoincrement())
  eventType String
  eventData Json
  createdAt DateTime @default(now())
}
